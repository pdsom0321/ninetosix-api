<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <!-- 로그 패턴에 색상 적용 %clr(pattern){color} -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <!-- log 변수 값 설정 -->
    <property name="CONSOLE_LOG_PATTERN" value="%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%5level) %cyan(%logger) - %yellow(%msg%n)"/>
    <!-- log 디렉토리 설정 -->
    <property name="LOG_DIR" value="logs" />
    <property name="LOG_FULL_PATH" value="${LOG_DIR}/api.log" />

    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FULL_PATH}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_FULL_PATH}.%d{yyyy-MM-dd}
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                ${CONSOLE_LOG_PATTERN}
                <!--%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level -&#45;&#45; [%thread] %logger{35} : %msg %n-->
            </pattern>
        </encoder>
    </appender>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                ${CONSOLE_LOG_PATTERN}
            </pattern>
        </encoder>
    </appender>

    <logger name="com.gsc.ninetosixapi" level="DEBUG" additivity="false" />
    <logger name="com.zaxxer.hikari" level="OFF" />

    <root level="DEBUG">
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="consoleAppender"/>
    </root>
</configuration>